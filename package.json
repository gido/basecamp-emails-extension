{
  "name": "basecamp-emails-extension",
  "version": "1.0.0",
  "description": "Browser extension to search email addresses of Basecamp team users",
  "main": "src/content/main.js",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "package": "npm run build && npm run package:chrome && npm run package:firefox",
    "package:chrome": "cd dist && zip -r ../basecamp-emails-chrome.zip .",
    "package:firefox": "cd dist && zip -r ../basecamp-emails-firefox.zip .",
    "test": "jest",
    "lint": "eslint src/**/*.js"
  },
  "keywords": [
    "basecamp",
    "browser-extension",
    "email-search",
    "chrome",
    "firefox"
  ],
  "author": "Antistatique",
  "license": "MIT",
  "devDependencies": {
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antistatique/basecamp-emails-extension.git"
  },
  "bugs": {
    "url": "https://github.com/antistatique/basecamp-emails-extension/issues"
  },
  "homepage": "https://github.com/antistatique/basecamp-emails-extension#readme"
}