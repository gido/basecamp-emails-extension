{
  "manifest_version": 3,
  "name": "Basecamp Email Search",
  "version": "1.0.4",
  "description": "Search email addresses of all Basecamp team users",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://3.basecamp.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://3.basecamp.com/*"
      ],
      "js": [
        "content/main.js"
      ],
      "css": [
        "assets/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Basecamp Email Search"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "https://3.basecamp.com/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "basecamp-email-search@antistatique.net"
    }
  }
}
